<div class="row">
  <div class="col-md-8">
    <h4> Answers (<%= question.answers.count %>) </h4>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h4> Description </h4>
  </div>
  <div class="col-md-3">
      <h4> Answered By </h4>
  </div>
  <div class="col-md-3">
      <h4> Created At </h4>
  </div>
  </div>
<% question.answers.each do |answer| %>
  <div class="row well">
    <div class="col-md-6">
      <h3><%= answer.description %></h3>
      <%= render 'votes/index', user: user, question: question, answer: answer %>
    </div>
    <div class="col-md-3">
      <h4><%= answer.user.email %></h4>
    </div>
    <div class="col-md-3">
      <h4><%= answer.created_at %></h4>
    </div>
  </div>
<% end %>