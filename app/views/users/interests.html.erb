<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="text-center"><%= @user.email %></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <h4> Your Interests </h4>
      <ul class="list-group">
        <% @user.categories.each do |category| %>
          <li class="list-group-item"><%= category.name %>
          	<%= link_to 'Remove', category_path(@user, category_id: category.id), method: :delete, class: 'pull-right' %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
     <h4>Add interest</h4>
      <%= form_tag @category do %>
     	  <div class="col-md-7">
     	    <%= select_tag 'category_id', options_for_select(category_dropdown, disabled: disabled_options(@user)), class: 'form-control', prompt: 'Select a category' %>
     	    <%=  %>
     	  </div>
     	  <div class="col-md-5">
     	    <%= hidden_field_tag 'user_id', @user.id %>
     	    <%= submit_tag 'Add', class: 'btn btn-default' %>
     	  </div>
      <% end %>
    </div>
  </div>
</div>